             xmlns:controls="clr-namespace:EsriMapPCLDemo.Controls;assembly=EsriMapPCLDemo"
             x:Class="EsriMapPCLDemo.MainPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <controls:MapView x:Name="MapView" Grid.Row="1" />
        </Grid>
    </ContentPage.Content>
</ContentPage>